#vhost template file 


<% if @port == 80 -%>
 NameVirtualHost *:80
<% end -%> 

<VirtualHost *:<%= @port %> >
	ServerName <%= @domain %> 
	DocumentRoot <%= @document_root %> 


<Directory />
    Options FollowSymLinks
    AllowOverride None
</Directory>
<Directory <%= @document_root %> > 
  Options Indexes FollowSymLinks
  AllowOverride None
  Allow from all
  Order Deny,Allow
 <% if node["platform"] == "ubuntu"-%>
  Require all granted
 <% end -%>
</Directory>
</VirtualHost>

